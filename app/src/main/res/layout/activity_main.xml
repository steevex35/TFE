<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/travel"



    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Meet you World"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/abc_search_url_text_normal"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/linearlayout_bg"
        android:padding="10dp"
       >

        <Button

            android:id="@+id/btnConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:text="@string/connection"
            android:onClick="connectionPage"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"
            />
       <Button
           android:id="@+id/btnInscription"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:layout_margin="4dp"
           android:text="@string/inscriptionPage"
           android:onClick="inscription"
           android:background="@drawable/button_default_bg"
           style="@style/DefaultButtonText"

           />



    </LinearLayout>

</RelativeLayout>
